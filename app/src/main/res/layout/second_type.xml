<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/asia3" />
    <LinearLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="100"/>
    <LinearLayout
        android:id="@+id/image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:src="@drawable/type_second__ichi"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_numbers"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10"
            android:textSize="30sp"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/ultratypebeta"
            />

        <TextView
            android:id="@+id/text_chislo"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/ultratypebeta"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/start_second_type_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/lets_go"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:background="@drawable/btn_stroke_white_press_blue"
            android:fontFamily="@font/ultratypebeta"
            />
    </LinearLayout>
</RelativeLayout>