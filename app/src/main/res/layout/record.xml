<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_score"
    android:background="@drawable/record_pic"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:layout_margin="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center">
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnclose"
        android:text="X"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/button_stroke_mycolor_press_white"
        android:layout_gravity="end"
        android:fontFamily="@font/ultratypebeta"
        />
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:layout_gravity="center"
        android:text="@string/textscore"
        android:background="@drawable/button_stroke_mycolor_press_white"
        android:textSize="24sp"
        android:textColor="@color/mycolor"
        android:fontFamily="@font/ultratypebeta"

        />
    <TextView
        android:id="@+id/score_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:layout_gravity="center"
        android:text="0"
        android:background="@drawable/button_stroke_mycolor_press_white"
        android:textSize="24sp"
        android:textColor="@color/mycolor"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ultratypebeta"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttoncontinuoe"
        android:background="@drawable/button_stroke_mycolor_press_white"
        android:text="@string/textcontinuoe"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/mycolor"
        android:fontFamily="@font/ultratypebeta"
        android:layout_gravity="center"/>

</LinearLayout>
</LinearLayout>

